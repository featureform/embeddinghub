{
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:@next/next/recommended",
    "plugin:jest/recommended"
  ],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "ignorePatterns": [
    "coverage",
    "build",
    "node_modules",
    "public",
    ".next",
    "out"
  ],
  "rules": {
    "react/prop-types": "off",
    "jest/no-conditional-expect": "off",
    "@next/next/no-img-element": "off"
  }
}
